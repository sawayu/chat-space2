.side
  .side__header
    .side__header__box
      .side__header__box__name
        = current_user.name
      .side__header__box__icon
        = link_to new_group_path do
          %i.far.fa-edit
        = link_to edit_user_path(current_user) do
          %i.fas.fa-cog

  .side__groups
    - current_user.groups.each do |heya|
      .side__groups__group
        = link_to group_messages_path(heya) do
          .side__groups__group__name
            = heya.name
          .side__groups__group__message
            = heya.show_last_message